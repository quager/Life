<Window x:Class="Life.wGameOverDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Life"
        mc:Ignorable="d" Height="200" Width="300" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="{x:Null}" AllowsTransparency="True">
    <Border BorderThickness="3" CornerRadius="10" Background="#FF8B2020" BorderBrush="#FFFF7878">
        <StackPanel Margin="10" VerticalAlignment="Center">
            <Button Style="{StaticResource StyleButton}" Content="Начать заново" Padding="10" Margin="10" FontSize="18" FontFamily="Arial" Click="Restart" />
            <Button Style="{StaticResource StyleButton}" Content="Новая игра" Padding="10" Margin="10" FontSize="18" FontFamily="Arial" Click="New" />
            <Button Style="{StaticResource StyleButton}" Content="Выход" Padding="10" Margin="10" FontSize="18" FontFamily="Arial" Click="Exit" />
        </StackPanel>
    </Border>
</Window>
